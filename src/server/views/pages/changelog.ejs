<!DOCTYPE html>

<html>

<head>
  <%- include('../partials/head'); %>
    <title>Changelog | Mathematical Base Defenders</title>


    <style>
      .link-button {
        border: none;
        background: none;
        font-family: "Computer Modern Unicode Serif";
        font-size: 24px;
      }

      .changelog-title-buttons {
        width: 15vw;
        height: 7vh;
        background: none;
        border: 1px solid black;
        font-family: "Computer Modern Unicode Serif";
        font-size: 24px;
      }

      h2 {
        font-style: normal;
        font-weight: normal;
        margin: 0;
        font-size: 40px;
      }

      h3 {
        font-weight: normal;
        margin: 0;
        font-style: normal;
        font-size: 32px;
      }

      h4 {
        font-weight: normal;
        margin: 0;
        font-style: normal;
        font-size: 28px;
      }

      p {
        margin: 0;
        font-size: 20px;
      }

      .monospace-text {
        font-family: monospace;
      }
    </style>
</head>

<body>
  <!-- Header -->
  <%- include('../partials/header'); %>


    <!-- Content -->
    <div id="content-wrapper">
      <div style="text-align: center; font-size: 20px">
        <p style="text-align: center; font-size: 48px">Changelog</p>

        <button id="website-changelog-selector-button" class="changelog-title-buttons"
          onClick="selectorButtonClicked('website')">
          Website</button><button id="game-changelog-selector-button" class="changelog-title-buttons"
          onClick="selectorButtonClicked('game')">
          Game
        </button>
        <div style="
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    ">
          <div style="
                            left: 15%;
                            width: 70%;
                            max-width: 1200px;
                            word-wrap: break-word;
                        ">
            <div id="website-changelog" style="text-align: left">
              <%- data.websiteChangelog %>
            </div>
            <div id="game-changelog" style="text-align: left">
              <%- data.gameChangelog %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer'); %>
</body>

