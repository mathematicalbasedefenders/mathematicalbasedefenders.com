<script src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-XVRB5TXW3K");
</script>
<script>
  document.getElementById("website-changelog").style.display = "none";
  document.getElementById("game-changelog").style.display = "none";
  function selectorButtonClicked(buttonClicked) {
    switch (buttonClicked) {
      case "website": {
        document.getElementById(
          "website-changelog-selector-button"
        ).style.backgroundColor = "black";
        document.getElementById(
          "website-changelog-selector-button"
        ).style.color = "white";
        document.getElementById(
          "game-changelog-selector-button"
        ).style.backgroundColor = "#eeeeee";
        document.getElementById(
          "game-changelog-selector-button"
        ).style.color = "black";
        document.getElementById("website-changelog").style.display =
          "block";
        document.getElementById("game-changelog").style.display =
          "none";
        break;
      }
      case "game": {
        document.getElementById(
          "game-changelog-selector-button"
        ).style.backgroundColor = "black";
        document.getElementById(
          "game-changelog-selector-button"
        ).style.color = "white";
        document.getElementById(
          "website-changelog-selector-button"
        ).style.backgroundColor = "#eeeeee";
        document.getElementById(
          "website-changelog-selector-button"
        ).style.color = "black";
        document.getElementById("website-changelog").style.display =
          "none";
        document.getElementById("game-changelog").style.display =
          "block";
        break;
      }
    }
  }
</script>

</html>