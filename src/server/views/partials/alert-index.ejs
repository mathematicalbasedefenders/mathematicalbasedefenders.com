<script>
  function checkURLQueryParameters() {
    const url = new URL(window.location.href);
    const registered = url.searchParams.get("registered");
    const activated = url.searchParams.get("activated");
    const requested = url.searchParams.get("requested");


    if (registered != null) {
      if (registered == "true") {
        alert(
          "Successfully registered! Check your email for a confirmation link!"
        );
        return;
      }
    }

    if (activated != null) {
      if (activated == "true") {
        alert(
          "Successfully activated your account! You may now log in!"
        );
        return;
      } else {
        alert(
          "Unable to activate account! Please try again or contact the administrator!"
        )
        return;
      }
    }

    if (requested != null) {
      if (requested == "true") {
        alert("Successfully sent a password reset link to your e-mail address!");
      }
    }

  }
  checkURLQueryParameters();
</script>